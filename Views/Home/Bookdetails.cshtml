@model IEnumerable<CoreDemo.Models.Book>

@{
    ViewData["Title"] = "Bookdetails";
}

<h1>Bookdetails</h1>


<div class="container">
    <h3 class="display-4"></h3>
    <div class="row">
        @foreach (Book B in Model)
        {
            <div class="col-md-4">
                <div class="card-mb-4 shadow-sm">
                    <svg class="bd-placeholder-img card-img-top" width="100" height="225" xml:base=""></svg>
                    <div class="card-body">
                        <p class="card-title">Name: @B.Name</p>
                       
                        <p class="card-body">Language: @B.Language</p>
                        <p class="card-body">price: @B.price</p>
                        <small class="text-muted">Author: @B.Author</small>
                    </div>
                </div>
            </div>
        }
    </div>
</div>